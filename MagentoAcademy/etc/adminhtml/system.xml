                    id="general"
                    translate="label"
                    type="text"
                    sortOrder="10"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1"
            >
                <label>General</label>
                <field
                        id="title"
                        translate="label"
                        type="text"
                        sortOrder="10"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Title</label>
                </field>
                <field
                        id="message"
                        translate="label"
                        type="textarea"
                        sortOrder="10"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Message</label>
                </field>
            </group>
        </section>
    </system>
</config>