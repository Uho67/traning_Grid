            <tab>sysperson_magentoacademy</tab>
            <resource>SysPerson_MagentoAcademy::system_config</resource>
            <group
                    id="general"
                    translate="label"
                    type="text"
                    sortOrder="10"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1"
            >
                <label>General</label>
                <field
                        id="is_enabled"
                        translate="label"
                        type="select"
                        sortOrder="10"
                        showInDefault="1"
                        showInWebsite="1"
                        showInStore="1"
                >
                    <label>Enabled</label>
                    <source_model>SysPerson\MagentoAcademy\Model\Sourse\Yesnonear</source_model>
                </field>
                <field
                        id="test"
                        translate="label"
                        type="multiselect"
                        sortOrder="10"
                        showInDefault="1"
